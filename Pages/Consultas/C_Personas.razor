@page "/ConsultaPersonas"
@inject PersonasBLL personaBLL

<PageTitle>Consultas</PageTitle>
<div class="card">
    <div class="card-header">
        <h2>Consultas de personas registrado</h2> 
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">PersonaId</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Celular</th>
                    <th scope="col">Email</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">FechaNacimiento</th>
                    <th scope="col">OcupacionId</th>
                    <th scope="col">Balance</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var persona in personaBLL.GetList(o => true))
                {
                    <tr>
                        <td>@persona.PersonaId</td>
                        <td>@persona.Nombres</td>
                        <td>@persona.Telefono</td>
                        <td>@persona.Celular</td>
                        <td>@persona.Email</td>
                        <td>@persona.Direccion</td>
                        <td>@persona.FechaNacimiento</td>
                        <td>@persona.OcupacionId</td>
                        <td>@persona.Balance</td>
                    </tr>
                }
            </tbody>
    </table>
    </div>
</div>



